# Convex Configuration
# Get your Convex URL from: https://dashboard.convex.dev
VITE_CONVEX_URL=

# Resend Email Configuration (Optional - Required for email features)
# Sign up at: https://resend.com
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=

# Email sender address (must be verified in Resend)
# For development, use: onboarding@resend.dev
# For production, use your verified domain email
RESEND_FROM_EMAIL=onboarding@resend.dev

# Application Configuration
VITE_APP_NAME=Your App Name
VITE_APP_URL=http://localhost:5173
VITE_SUPPORT_EMAIL=support@yourapp.com

# OTP Configuration (Optional - defaults are fine for most cases)
# OTP expiry in minutes
OTP_EXPIRY_MINUTES=15
# Maximum OTP verification attempts before code is invalidated
MAX_OTP_ATTEMPTS=5

# Rate Limiting Configuration (Optional)
# Maximum emails per hour per user
MAX_EMAIL_PER_HOUR=5
# Maximum login attempts per 15 minutes
MAX_LOGIN_ATTEMPTS=5
# Maximum OTP requests per 15 minutes
MAX_OTP_REQUESTS=3

# Feature Flags (Optional)
# Enable email verification on signup
ENABLE_EMAIL_VERIFICATION=false
# Enable 2FA (requires email verification)
ENABLE_2FA=false
# Send welcome emails on signup
SEND_WELCOME_EMAIL=false
